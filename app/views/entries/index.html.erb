<div class="container">
  <div class="card">
    <div class="card-body">
      <h1>Entries</h1>

      <table class="table table-striped">
        <thead >
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Date</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @entries.each do |entry| %>
            <tr>
              <td><%= entry.title %></td>
              <td><%= entry.description %></td>
              <td><%= entry.date %></td>
              <td><%= link_to 'Show', entry, :class => "btn btn-primary" %></td>
              <td><%= link_to 'Edit', edit_entry_path(entry), :class => "btn btn-primary" %></td>
              <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
    </div>
  </div>
</div>
