<div class="container">
  <div class="card">
    <div class="card-body">
      <p>
        <strong>Title:</strong>
        <%= @entry.title %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @entry.description %>
      </p>

      <p>
        <strong>Date:</strong>
        <%= @entry.date %>
      </p>

      <%= link_to 'Edit', edit_entry_path(@entry), class: "btn btn-primary" %>
      <%= link_to 'Back', entries_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
